---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="zh-Hans" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="/favicon.png" type="image/png">
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
